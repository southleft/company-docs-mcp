{
	"name": "company-docs-mcp",
	"version": "1.0.0",
	"description": "Self-hosted MCP server for organization documentation",
	"private": false,
	"type": "module",
	"scripts": {
		"deploy": "wrangler deploy",
		"deploy:local": "wrangler deploy -c wrangler.toml.local",
		"dev": "wrangler dev",
		"dev:local": "wrangler dev -c wrangler.toml.local --env-file .env.local",
		"format": "biome format --write",
		"lint:fix": "biome lint --fix",
		"start": "wrangler dev",
		"start:local": "wrangler dev -c wrangler.toml.local --env-file .env.local",
		"cf-typegen": "wrangler types",
		"type-check": "tsc --noEmit",
		"ingest": "tsx scripts/ingest/ingest.ts",
		"ingest:csv": "tsx scripts/ingest/ingest-csv.ts --",
		"ingest:pdf": "tsx scripts/ingest/ingest.ts pdf",
		"ingest:url": "tsx scripts/ingest/ingest.ts url",
		"ingest:markdown": "tsx scripts/ingest/ingest-markdown.ts --",
		"ingest:web": "tsx scripts/ingest/crawl-website.ts --",
		"manifest": "tsx scripts/generate-manifest.ts",
		"ingest:supabase": "tsx scripts/ingest/ingest-supabase.ts",
		"ingest:fresh": "tsx scripts/ingest/ingest-supabase.ts -- --clear",
		"ingest:update": "tsx scripts/ingest/ingest-supabase.ts",
		"ingest:preview": "tsx scripts/ingest/ingest-supabase.ts -- --dry-run --verbose",
		"test": "vitest run --config vitest.unit.config.ts",
		"test:watch": "vitest --config vitest.unit.config.ts",
		"test:workers": "vitest run --config vitest.config.ts",
		"test:local": "tsx scripts/test-local.ts",
		"setup": "node scripts/setup.js",
		"test:connection": "tsx scripts/test-connection.ts",
		"slack:start": "tsx src/slack-bot/index.ts",
		"slack:deploy": "tsx scripts/deploy-slack.ts",
		"db:setup": "tsx scripts/setup-database.ts",
		"db:setup:sql": "tsx scripts/setup-database.ts --sql-only",
		"db:migrate": "tsx scripts/migrate-database.ts"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.22.0",
		"@slack/bolt": "^4.4.0",
		"@supabase/supabase-js": "^2.82.0",
		"@types/cheerio": "^0.22.35",
		"abort-controller": "^3.0.0",
		"agents": "^0.0.95",
		"cheerio": "^1.1.0",
		"dotenv": "^17.2.1",
		"openai": "^4.67.3",
		"pdf-parse": "^1.1.1",
		"uuid": "^11.1.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.4",
		"@cloudflare/vitest-pool-workers": "^0.12.16",
		"@types/node": "^22.10.2",
		"@typescript-eslint/eslint-plugin": "^8.18.2",
		"@typescript-eslint/parser": "^8.18.2",
		"eslint": "^9.18.0",
		"node-fetch": "^2.7.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vitest": "^4.0.18",
		"wrangler": "^4.20.5"
	}
}
